{
  "name": "react-vite",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev:hosts": "turbo pnpm --filter \"./apps/host\" dev",
    "build": "turbo pnpm --parallel --filter \"./apps/**\" build",
    "build:remotes": "turbo turbo pnpm --parallel --filter \"./apps/*-app\" build",
    "serve": "turbo pnpm --parallel --filter \"./apps/**\" preview",
    "serve:remotes": "turbo pnpm --parallel --filter \"./apps/*-app\" serve",
    "stop": "kill-port --port 5000,5001,5002"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "@originjs/vite-plugin-federation": "^1.2.3"
  }
}
